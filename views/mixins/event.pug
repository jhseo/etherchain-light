mixin event_row(event)
  if event.event === "Transfer"
    tr
      td
        a(href="/event/" + event._id) #{event.event}
      td
        a(href="/address/" + event.args.from) #{event.args.from}
      td
        a(href="/address/" + event.args.to) #{event.args.to}
      td #{tokenformatter.format(event.args.value)}
      td #{moment(event.timestamp * 1000).fromNow()}
  if event.event === "Approval"
    tr
      td
        a(href="/event/" + event._id) #{event.event}
      td
        a(href="/address/" + event.args.owner) #{event.args.owner}
      td
        a(href="/address/" + event.args.spender) #{event.args.spender}
      td #{tokenformatter.format(event.args.value)}
      td #{moment(event.timestamp * 1000).fromNow()}
